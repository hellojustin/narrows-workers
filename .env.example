# AWS Configuration
AWS_REGION=us-east-1

# VPC Configuration (for Lambda functions to access internal services)
# Required for accessing Graphiti within the VPC
VPC_SUBNET_IDS=subnet-xxx,subnet-yyy
VPC_SECURITY_GROUP_IDS=sg-xxx

# S3 Bucket for media storage
MEDIA_BUCKET_NAME=your-media-bucket-name

# Database connection (shared with narrows API)
DATABASE_URL=postgres://user:password@host:5432/narrows

# Graphiti API
GRAPHITI_API_URL=http://your-graphiti-host:8000
GRAPHITI_API_KEY=your-graphiti-api-key
# Single graph ID for all podcast ingestion (all series go to one graph)
GRAPHITI_GRAPH_ID=your-graph-id

# OpenAI for contextual chunk generation
OPENAI_API_KEY=sk-your-openai-api-key

# AWS MediaConvert
MEDIACONVERT_ENDPOINT=https://your-mediaconvert-endpoint.mediaconvert.us-east-1.amazonaws.com
MEDIACONVERT_ROLE_ARN=arn:aws:iam::123456789:role/MediaConvertRole

# Narrows API (for updating episode records)
NARROWS_API_URL=http://your-narrows-api-host
NARROWS_API_KEY=your-narrows-api-key
